[flake8]
max-line-length = 120
extend-ignore = E203, E221, E222, E225, E226, E231, E241, E402, E501, E713, E722, F401, F541, F811, F821, F841, C901, E702, E201, E202, D100, D101, D102, D103, D104, D105, D106, D107, D200, D205, D400, D401
exclude = venv, .git, __pycache__, .egg-info
per-file-ignores =
    tests/*: D100, D101, D102, D103, D104, D105, D106, D107, D200, D205, D400, D401
    __init__.py: F401
max-complexity = 10
